<div class="container mx-auto"style="width:300px">
<h2>Sign up</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <%= f.input :name,label:"Name", input_html:{class:"textarea my-1"},wrapper: false,lable_html:{class:"label"},placeholder:"Enter your name",autofocus:true%>
    <%= f.input :username,label:"Username", input_html:{class:"textarea my-1"},wrapper: false,lable_html:{class:"label"},placeholder:"Enter your Username"%> 
<%= f.input :email,label:"Email", input_html:{class:"textarea my-1"},wrapper: false,lable_html:{class:"label"},placeholder:"Enter your Email"%>
  
    <%= f.input :password,label:"Password", input_html:{class:"textarea my-1"},wrapper: false,lable_html:{class:"label"},placeholder:"Enter your Password",hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>

  <%= f.input :password_confirmation,required: true,input_html: {class:"input" },wrapper:false,label_html:{class: "label" }%>

  <div class="actions my-4  ">
    <%= f.submit "Sign up",class:"btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>