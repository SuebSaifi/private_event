<div class="d-flex flex-nowrap my-5 ">
<% @events.each do |event| %>

    <div class="mx-4 card"style="width:220px">
        <article class="card-body">
            <div class="media-left">
                <figure class="image is-64x64">
                    <%=gravatar_image_tag(event.user.email,size:64,alt:event.user.name)%>
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong><%=event.user.name%></strong><br/>
                    <small><%=event.user.username%></small><br/>
                    <p><%= event.title%></p><br/>
                    <p>Price:<%= event.price%></p><br/>                    
                </div>
                <%if user_signed_in? %>
                <div class="level">
                    <div class="level-left is-mobile">
                        <%= link_to event, class: "level-item" do %>
                        
                             <span class="icon">
                                <i class="fa fa-link"aria-hidden="true"></i></span>
                                <%end%>                     
                           
                                
                                <% if event.user.id==current_user.id%>
                                <%= link_to edit_event_path(event), class: "level-item" do %>
                                <span class="icon"><i class="fa fa-pencil"aria-hidden="true"></i></span>
                                <% end %>
                                <%= link_to event,method: :delete,data: {confirm:"Are you sure you want to delete this tweet?"} do %>
                                <span class="icon"><i class="fa fa-trash-o"aria-hidden="true"></i></span>
                                <% end %>
                                <% end %>
                                </div>
                </div>          
                                <%end%>         
            </div>
        </article>
    </div>

    <%end%>
    </div>