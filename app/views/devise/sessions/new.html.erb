<div class="container mx-auto"style="width:300px">

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= f.input :email,label:"Email", input_html:{class:"textarea my-1"},wrapper: false,lable_html:{class:"label"},placeholder:"Enter your Email"%>
  
    <%= f.input :password,label:"Password", input_html:{class:"textarea my-1"},wrapper: false,lable_html:{class:"label"},placeholder:"Enter your Password",hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
  <div class="field">
    


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>