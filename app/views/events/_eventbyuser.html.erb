<div class="card">
<div class="card-body ">
<h2>Events Created</h2>
<div class="my-3 scroll">

<% @spic_event.each do |event| %>
<div class="card my-3">
<div class="card-body">
<h4 class="my-2 "><%=event.title%></h4>
<%= link_to edit_event_path(event), class: "icons mx-3" do %>
<span class="icon"><i class="bi bi-pencil-square"></i></span>
<%end%>
<%= link_to event,method: :delete,data: {confirm:"Are you sure you want to delete this tweet?"},class:"icons" do %>
<span class="icon"><i class="bi bi-trash3"></i></span>
<%end%>
</div>
</div>
<%end%>
</div></div>
</div>